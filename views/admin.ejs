<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Admin | Company</title>
</head>
<body>
    <%- include("partials/navbar") %>
    <div class="row gx-5 mx-4" style="margin-top: 6rem;">
      <div class="col col-lg-10 mx-auto">
        <div class="d-flex justify-content-between mb-3">
            <h2 class="fw-bolder">Articles</h2>
            <a class="btn btn-success my-auto" href="admin/create">New article</a>
        </div>
        <table class="table table-striped table-bordered"">
            <thead class="table-dark">
                <tr>
                  <th>ID</th>
                  <th>Title</th>
                  <th>Content</th>
                  <th>Image</th>
                  <th>Author</th>
                  <th>Created at</th>
                  <th>Updated at</th>
                  <th>Actions</th>
                </tr>
            </thead>
            <tbody>
              <% for(article of articlesUsers) {%>
                <tr>
                    <td><%= article.id %></td>
                    <td><%= article.title %></td>
                    <% const wordLimit = 10; %>
                    <% const shortenedText = article.content.split(" ").slice(0, wordLimit).join(" ") + "..."; %>
                    <td><%=shortenedText%></td>
                        <% if(article.image.includes("http")) {%>
                        <td><img src="<%=article.image%>" width="100px" alt="Article image"></td>
                        <% }  else {%>
                          <td><img src="/img/<%=article.image%>" width="100px" alt="Article image"></td>
                          <% } %>
                      <td><%= article.user.username %></td>
                      <td><%=articleDate[articlesUsers.indexOf(article)].parsedCreatedAt%></td>
                      <td><%=articleDate[articlesUsers.indexOf(article)].parsedUpdatedAt%></td>
                      <td class="d-flex flex-column">
                        <a class="btn btn-primary px-2 mb-2 " href="admin/edit/<%=article.id%>">Edit</a>
                        <a class="btn btn-danger px-2" href="admin/delete/<%=article.id%>">Remove</a>
                    </td>
                </tr>
              <% } %>
            </tbody>
          </table>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>